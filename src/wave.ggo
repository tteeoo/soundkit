version "0.1.0"
package "wave"
purpose "soundkit - wave tool: generate waves"

text "\nTool options:"
option "type" t "Wave type: sine, square, sawtooth, triangle" values="s","u","w","t" enum default="s" optional
option "frequency" f "Wave frequency" float required
option "amplitude" a "Wave amplitude" float default="1.0" optional
